@page "/blog/create"
@inject IBlogService BlogService
@inject NavigationManager NavigationManager

<TextCenter Text="Create Blog" />

<CreateBlogForm BlogCreationDTO="_blogCreationDTO" ValidSubmit="OnValidSubmit" />

@code{
    private BlogCreationDTO _blogCreationDTO = new BlogCreationDTO();

    private async Task OnValidSubmit()
    {
        var blogDTO = await BlogService.CreateBlogAsync(_blogCreationDTO);
        NavigationManager.NavigateTo($"blog/view/{blogDTO.ID}");
    }
}