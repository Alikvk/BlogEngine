@page "/blog/create"
@inject IBlogService BlogService
@inject NavigationManager NavigationManager

<TextCenter Text="Create Blog"/>

<BlogForm Blog="_blog" ValidSubmit="OnValidSubmit" />

@code{
    private BlogModel _blog = new BlogModel();

    private async Task OnValidSubmit()
    {
        int id = await BlogService.CreateBlogAsync(_blog);
        NavigationManager.NavigateTo($"blog/view/{id}");
    }
}