@page "/blog/create"
@inject ReadingTimeEstimator ReadingTimeEstimator

<TextCenter Text="Create Blog"/>

<BlogForm Blog="_blog" ValidSubmit="OnValidSubmit" />

@code{
    private BlogModel _blog = new BlogModel();

    private void OnValidSubmit()
    {
        _blog.DateCreated = DateTime.Now;
        _blog.EstimatedReadingTimeInMinutes = ReadingTimeEstimator.GetEstimatedReadingTime(_blog.HTMLContent);

        // TODO: then save in DB
    }
}