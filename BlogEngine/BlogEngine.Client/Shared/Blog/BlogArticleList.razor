<GenericList Collection="BlogDTOs">
    <EmptyTemplateFragment>
        <div class="text-center">
            <h1>Articles not available</h1>
        </div>
    </EmptyTemplateFragment>
    <WholeCollectionTemplate>

        <!-- blog articles -->
        <div class="article-section">
            <div class="container">
                <div class="row d-flex">

                    @foreach (var blogDTO in BlogDTOs)
                    {
                        <div class="col-md-6 col-lg-4">
                            <IndividualBlogArticle BlogDTO="blogDTO" />
                        </div>
                    }

                </div>
            </div>
        </div>

    </WholeCollectionTemplate>
</GenericList>

@code {
    [Parameter] public List<BlogDTO> BlogDTOs { get; set; }
}