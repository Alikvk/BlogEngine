<GenericList Collection="UserInfoDetailDTOs">
    <EmptyTemplateFragment>
        <TextCenter Text="Accounts not available" />
    </EmptyTemplateFragment>
    <WholeCollectionTemplate>

        <div class="container mt-3">
            <div class="row">

                @foreach (var userInfoDetailDTO in UserInfoDetailDTOs)
                {
                    <div class="col-lg-3 col-md-6 my-2">
                        <IndividualAccountCard UserInfoDetailDTO="userInfoDetailDTO" />
                    </div>
                }

            </div>
        </div>

    </WholeCollectionTemplate>
</GenericList>

@code {
    [Parameter] public List<UserInfoDetailDTO> UserInfoDetailDTOs { get; set; }
}