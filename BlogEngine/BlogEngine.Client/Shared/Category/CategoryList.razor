<GenericList Collection="CategoryDTOs">
    <EmptyTemplateFragment>
        <TextCenter Text="Categories not available"/>
    </EmptyTemplateFragment>
    <WholeCollectionTemplate>

        <div class="container">
            <div class="row">
                <!-- categories -->
                @foreach (var categoryDTO in CategoryDTOs)
                {
                    <div class="col-xl-3 col-lg-4 col-md-6 my-2">
                        <IndividualCategoryCard CategoryDTO="categoryDTO"
                                                CategoryDelete="CategoryDelete" />
                    </div>
                }
            </div>
        </div>

    </WholeCollectionTemplate>
</GenericList>

@code {
    [Parameter] public List<CategoryDTO> CategoryDTOs { get; set; }
    [Parameter] public EventCallback<CategoryDTO> CategoryDelete { get; set; }
}