<div class="card @CardCss">
    <h5 class="card-header">Search</h5>
    <div class="card-body">
        <div class="input-group">
            <input @bind-value="_searchString" class="form-control" placeholder="Search for...">
            <span class="input-group-append">
                <a href="blog/search/@_searchString" class="btn btn-secondary rounded-0 rounded-right">Go!</a>
            </span>
        </div>
    </div>
</div>

@code{
    [Parameter] public string CardCss { get; set; }
    private string _searchString = string.Empty;
}