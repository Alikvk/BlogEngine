<div class="card @CardCss">
    <h5 class="card-header">Search</h5>
    <div class="card-body">
        <div class="input-group">
            <input class="form-control" placeholder="Search for...">
            <span class="input-group-append">
                <button class="btn btn-secondary rounded-0 rounded-right">Go!</button>
            </span>
        </div>
    </div>
</div>

@code{
    [Parameter] public string CardCss { get; set; }
}